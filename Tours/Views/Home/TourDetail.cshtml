@model Tours.ViewModels.TourViewModel

@{
    ViewBag.Title = "TourDetail";
    Layout = "~/Views/Shared/_ShowroomLayout.cshtml";
}

<h2>@Model.Name</h2>

<div class="row">
    <div class="col-md-3">
        <img class="img-responsive img-rounded" alt="Image" style="width: 100%;" src="@Html.Raw(Model.Cover)" />
    </div>
    <div class="col-lg-9">
        <div class="text-danger text-center">
            <h3>@Model.Place</h3>
        </div>
        <div>
            @Model.Description
        </div>
        <div>
            @Model.Price
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-6">
        <img class="img-responsive" style="width: 400px;" alt="Image" src="@Model.Images1"/>
    </div>
    <div class="col-md-6">
        <img class="img-responsive" style="width: 400px;" alt="Image" src="@Model.Images2" />
    </div>
</div>
<a href="@Url.Action("Create", "Packages", new {id = Model.Id})" class="btn btn-danger" role="button">Đặt</a>
